<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ExerciseSelectionActivity">

  <!-- 뒤로가기 버튼 -->
  <ImageButton
      android:id="@+id/btnGoToHome"
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:srcCompat="@android:drawable/ic_menu_revert"
      android:contentDescription="@string/back_button_description"
      android:background="?attr/selectableItemBackground"
      app:tint="@android:color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp" />

  <!-- 화면 제목 -->
  <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="운동 선택"
      android:textColor="@android:color/black"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/btnGoToHome"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp" />

  <!-- 운동 버튼 레이아웃 -->
  <Button
      android:id="@+id/btnPushUp"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:text="팔굽혀펴기"
      android:textSize="16sp"
      android:backgroundTint="@color/purple_500"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="24dp"
      android:layout_marginHorizontal="16dp" />

  <Button
      android:id="@+id/btnPlank"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:text="플랭크"
      android:textSize="16sp"
      android:backgroundTint="@color/purple_500"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/btnPushUp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <Button
      android:id="@+id/btnSitUp"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:text="윗몸일으키기"
      android:textSize="16sp"
      android:backgroundTint="@color/purple_500"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/btnPlank"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <Button
      android:id="@+id/btnLunge"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:text="런지"
      android:textSize="16sp"
      android:backgroundTint="@color/purple_500"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/btnSitUp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <Button
      android:id="@+id/btnSquat"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:text="스쿼트"
      android:textSize="16sp"
      android:backgroundTint="@color/purple_500"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/btnLunge"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp" />

  <!-- 이미지 추가 -->
  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:srcCompat="@drawable/tfl2_logo"
      app:layout_constraintTop_toBottomOf="@id/btnSquat"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
